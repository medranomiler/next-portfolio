{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/components/ToastProvider.js", "hooks/useFetchRepos.js", "src/components/Repos/Personals.js", "src/components/Repos/RepoCard.js", "src/components/Repos/Collabs.js", "src/pages/api/signup.js", "src/components/AuthContext.js", "src/components/Navbar.js"],
  "exclude": ["node_modules"]
}
